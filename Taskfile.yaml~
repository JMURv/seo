version: 3

tasks:
  app:
    desc: Run app
    cmds:
      - "go run cmd/main.go"

  pb:
    desc: Gen Proto file
    cmds:
      - "protoc --go_out=. --go-grpc_out=. --go_opt=paths=source_relative --go-grpc_opt=paths=source_relative api/pb/seo.proto"

  t:
    desc: Run tests
    cmds:
      - "task t-hdl"
      - "task t-ctrl"
      - "task t-repo"

  t-hdl:
    desc: Run handler tests
    cmds:
      - "go test ./internal/handler/http"
      - "go test ./internal/handler/grpc"
      - "go test -coverprofile=cov_http.out ./internal/handler/http && go tool cover -func=cov_http.out"
      - "go test -coverprofile=cov_grpc.out ./internal/handler/grpc && go tool cover -func=cov_grpc.out"

  t-ctrl:
    desc: Run controller tests
    cmds:
      - "go test ./internal/controller"
      - "go test -coverprofile=cov_ctrl.out ./internal/controller && go tool cover -func=cov_ctrl.out"

  t-repo:
    desc: Run repository tests
    cmds:
      - "go test ./internal/repository/db"
      - "go test -coverprofile=cov_repo.out ./internal/repository/db && go tool cover -func=cov_repo.out"

  mocks:
    desc: Generate mocks
    cmds:
      - mockgen -source="./internal/handler/hdl.go" -destination="mocks/mock_ctrl.go" -package=mocks
      - mockgen -source="./internal/controller/ctrl.go" -destination="mocks/mock_repos.go" -package=mocks
      - mockgen -source="./internal/controller/sso/sso.go" -destination="mocks/mock_sso.go" -package=mocks
